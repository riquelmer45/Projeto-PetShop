<h1>Todos os Funcionario</h1>

<div class="tabelaFuncionarios">
    <table class="table table-dark table-sm">
        
            <thead class="thead-light">
                <tr class="test-light">
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Sobrenome</th>
                <th scope="col">Data de Nasc</th>
                <th scope="col">Função</th>
                <th scope="col">Login</th>                
                <th scope="col">Actions</th>
                </tr>
            </thead>
        {{#each funcionarios}}   
            <tbody>
                <tr>
                <th scope="row">{{this.id}}</th>
                <td>{{this.nome}}</td>
                <td>{{this.sobrenome}}</td>
                <td>{{this.data_nascimento}}</td>
                <td>{{this.funcao}}</td>
                <td>{{this.login}}</td>
                <td class="text-end">
                        <div class="d-flex">
                            <a href="/funcionarios/edit/{{this.id}}" type="button" class="btn btn-light btn-small me-1"><i class="bi bi-pencil"></i> Edit</a>
                            <form action="/funcionarios/remove" method="post" class="">
                                <input type="hidden" name="id" value="{{this.id}}">
                                <button type="submit" class="btn btn-light btn-smal">
                                    <a><i class="bi bi-person-x"></i>Delete</a>
                                    
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>      
            </tbody>
        {{/each}} 
    </table>

</div>