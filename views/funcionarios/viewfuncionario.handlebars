<div class=" text-center header">
  <h1 class="text-center header-text">Todos os Funcionarios</h1>
</div>

<div class="espaco tabela">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Nome</th>
        <th scope="col">Sobrenome</th>
        <th scope="col">Data de Nascimento</th>
        <th scope="col">Função</th>
        <th scope="col">Login</th>               
        <th scope="col">Editar</th>
        <th scope="col">Deletar</th>
      </tr>
    </thead>
    {{#each funcionarios}}
    <tbody>
      <tr>
        <td class="col-2 ">{{this.nome}}</td>
        <td class="col-3">{{this.sobrenome}}</td>
        <td>{{this.data_nascimento}}</td>
        <td>{{this.funcao}}</td>
        <td>{{this.login}}</td>
        <td><a href="/funcionarios/edit/{{this.id}}">{{> edit}}</a></td>
        <td>
          <form action="/funcionarios/remove" method="post">
            <input type="hidden" name="id" value="{{this.id}}">
            <button type="submit" style="border: none !important; background-color: transparent !important;" >
              {{> del}}
            </button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>