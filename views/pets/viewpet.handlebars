<div class=" text-center header">
  <h1 class="text-center header-text">Todos os Pets</h1>
</div>



<ul class="user_list list-group container">
  {{#each pets}}

  <li class="list-group-item text-center">
    <div class="col-md-3">
      <label for="">{{this.nome}}</label>
    </div>
    <div class="col-md-3 text-center">
      <label for="">{{this.modelo}}</label>
    </div>
    <div class="col-md-4 actions justify-content-end">
      <a href="/pets/edit/{{this.id}}">
        {{> edit_pet}}
      </a>
      <form action="/pets/remove" method="post">
        <input type="hidden" name="id" value="{{this.id}}">
        <button type="submit">
          {{> del_pet}}
        </button>
      </form>
    </div>



    {{/each}}

    </div>