<div class=" text-center header">
  <h1 class="text-center header-text">Todos os Pets</h1>
</div>

<div class="espaco tabela">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Nome</th>
        <th scope="col">Espécie</th>
        <th scope="col">Raça</th>
        <th scope="col">Nascimento</th>
        <th scope="col">Cor</th>
        <th scope="col">Peso</th>
        <th scope="col">Editar</th>
        <th scope="col">Deletar</th>
      </tr>
    </thead>
    {{#each pets}}
    <tbody>
      <tr>
        <td>{{this.nome}}</td>
        <td>{{this.especie}}</td>
        <td>{{this.raça}}</td>
        <td>{{this.nascimento}}</td>
        <td>{{this.cor}}</td>
        <td>{{this.peso}}</td>

        <td><a href="/pets/edit/{{this.id}}">{{> edit_pet}}</a></td>
        <td>
          <form action="/pets/remove" method="post">
            <input type="hidden" name="id" value="{{this.id}}">
            <button type="submit">
              {{> del_pet}}
            </button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>