<div class="d-flex justify-content-center">
    <h1 class="center">Cadastrar Cliente</h1>
</div>
<div class="box">
    <form action="/cliente/add" class="p-2" method="post">
        <div class="row mb-2">
            <label class="col-sm-2 col-form-label">Nome</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" name="name" placeholder="Informe o Nome">
            </div>
        </div>
        <div class="row mb-2">
            <label class="col-sm-2 col-form-label">Sobrenome</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" name="name" placeholder="Informe o Sobrenome">
            </div>
        </div>
        <div class="row mb-2">
            <label class="col-sm-2 col-form-label">Data de Nascimento</label>
            <div class="col-sm-8">
                <input type="date" class="form-control" name="dataNascimento">
            </div>
        </div>
        <div class="row mb-2">
            <label class="col-sm-2 col-form-label">CPF</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" name="cpf" placeholder="Informe o CPF">
            </div>
        </div>
        <input type="submit" value="Cadastrar">
    </form>
</div>